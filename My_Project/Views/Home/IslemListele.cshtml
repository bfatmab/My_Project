<table class="table table-striped">
    <thead>
        <tr>
            <th scope="row">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th scope="row">
                @Html.DisplayNameFor(model => model.OgrNo)
            </th>
            <th scope="row">
                @Html.DisplayNameFor(model => model.AnaPara)
            </th>
            <th scope="row">
                @Html.DisplayNameFor(model => model.FaizOran)
            </th>
            <th scope="row">
                @Html.DisplayNameFor(model => model.FaizMiktar)
            </th>
            <th scope="row">
                @Html.DisplayNameFor(model => model.ToplamTutar)
            </th>
            <th scope="row">
                @Html.DisplayNameFor(model => model.KrediTuru)
            </th>
            <th scope="row">
                @Html.DisplayNameFor(model => model.OgrenimTuru)
