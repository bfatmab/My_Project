            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OgrNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnaPara)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FaizOran)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FaizMiktar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ToplamTutar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KrediTuru)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OgrenimTuru)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.KrediNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ödemeBilgisi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaksitMiktar)
                </td>*@
            <td>
                @Html.ActionLink("Güncelle", "Yapilandir", new { id = item.OgrNo }, new { @class = "btn btn-primary " })&nbsp;&nbsp;&nbsp;

                @Html.ActionLink("Delete", "IslemSil", new { id = item.Id }, new { @onclick = "return confirm('silmek istediğinize emin misiniz?');", @class = "btn btn-danger " })&nbsp;&nbsp;&nbsp;

                @Html.ActionLink("Taksit Oluştur", "Taksitlendir", new { id = item.Id }, new { @class = "btn btn-primary " })&nbsp;&nbsp;&nbsp;
                @Html.ActionLink("Detay", "TaksitIslemDetay", new { id = item.Id }, new { @class = "btn btn-primary " })&nbsp;&nbsp;&nbsp;


            </td>
            </tr>
        }
    </tbody>
</table>

