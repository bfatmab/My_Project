@model My_Project.Models.Taksit

@{
    ViewData["Title"] = "TaksitEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>TaksitEdit</h1>

<h4>Taksit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="TaksitEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaksitNo" class="control-label"></label>
                <input asp-for="TaksitNo" class="form-control" />
                <span asp-validation-for="TaksitNo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="KrediNo" class="control-label"></label>
                <input asp-for="KrediNo" class="form-control" />
                <span asp-validation-for="KrediNo" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <label asp-for="TaksitMiktar" class="control-label"></label>
                <input asp-for="TaksitMiktar" class="form-control" />
                <span asp-validation-for="TaksitMiktar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ödemeBilgisi" class="control-label"></label>
                <input asp-for="ödemeBilgisi" class="form-control" />
                <span asp-validation-for="ödemeBilgisi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tarih" class="control-label"></label>
                <input asp-for="Tarih" class="form-control" />
                <span asp-validation-for="Tarih" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="TaksitListele">Taksit Listesine Dön</a>
</div>
